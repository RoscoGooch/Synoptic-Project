<!DOCTYPE html>
<html>
<head>
  <title>Register</title>
  <link rel="stylesheet" href="/style.css">
  <script>
    function validateForm() {
      const password = document.getElementById('password').value;
      const confirm = document.getElementById('confirm').value;
      if (password !== confirm) {
        alert('Passwords do not match.');
        return false;
      }
      return true;
    }
  </script>
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar">
    <div class="nav-left">
      <div class="logo">Trash2Cash</div>
      <div class="nav-links">
        <a href="/">Home</a>
        <a href="/login">Log Recycle Items</a>
        <a href="/login">Upload Photo</a>
        <a href="/login">View Rewards</a>
      </div>
    </div>
    <div class="nav-right">
      <a href="/login">Login</a>
      <a href="/register">Register</a>
    </div>
  </nav>

  <!-- Registration Form -->
  <div class="container">
    <h2>Create an Account</h2>

    <% if (error) { %>
      <p style="color: red;"><%= error %></p>
    <% } %>
    <% if (success) { %>
      <p style="color: green;"><%= success %></p>
    <% } %>

    <form method="POST" action="/register" onsubmit="return validateForm();">
      <input type="text" name="username" placeholder="Username" required>
      <input type="password" id="password" name="password" placeholder="Password" required>
      <input type="password" id="confirm" name="confirmPassword" placeholder="Confirm Password" required>
      <button type="submit">Register</button>
    </form>
  </div>
</body>
</html>
